<!-- see https://www.baeldung.com/logback -->
<configuration scan="false" debug="false">
    <!-- suppress output INFO at start
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />
    -->

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- for %mdc{...} with possible variables and some general information -->
            <pattern>timestamp=%d loglevel=%-5p class=%logger{36} Client-ID=%mdc{Client-ID:--}
                Request-ID=%mdc{Request-ID:--} message=%msg%n
            </pattern>
        </encoder>
        <withJansi>false</withJansi>
    </appender>


    <logger name="swiss.opentransportdata.ojp.adapter" level="INFO"/>

    <root level="${LOG_LEVEL:-WARN}">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
